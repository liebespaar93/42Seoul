ex06 줄 바꿈

########################
### 파일명 : test.sh
### 실행 환경 : bash
########################

#!/bin/bash
count=1
test=`ls -l` 
IFS=$'\n'
for x in $test
do	
	if (($count % 2 == 1))
	then
		echo $x
	else
		echo "공백 $x "
	fi
	count=$(($count+1))
done

$ ./skip.sh > data 
